<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/dongkey"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:id="@+id/postTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@{Post.Title}"
                    app:layout_constraintStart_toStartOf="match_parent"
                    tools:text="Title"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/postCreator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@{Post.Creator}"
                    android:layout_below="@+id/postTitle"
                    app:layout_constraintTop_toBottomOf="@+id/postTitle"
                    app:layout_constraintStart_toStartOf="@+id/postTitle"
                    tools:text="Creator" />

            <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@{Post.postDate}"
                    app:layout_constraintLeft_toRightOf="@+id/postCreator"
                    app:layout_constraintStart_toStartOf="@+id/postCreator"
                    android:layout_marginRight="10dp"
                    tools:text="PostDate" android:layout_alignParentEnd="true" android:layout_marginEnd="49dp"
                    android:layout_toEndOf="@+id/postCreator" android:layout_marginStart="181dp"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"/>

            <TextView
                    android:id="@+id/viewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:text="@{String.valueOf(Post.ViewCount)}"
                    app:layout_constraintTop_toTopOf="@+id/postCreator"
                    app:layout_constraintLeft_toRightOf="@+id/postCreator"
                    tools:text="ViewCount" android:layout_alignParentEnd="true" android:layout_marginEnd="171dp"
                    android:layout_toEndOf="@+id/postCreator" android:layout_marginStart="47dp"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>